{
    "name": "nexo-static-generator",
    "main": "src/main.js",
    "version": "2.2.5",
    "dependencies": {
        "ejs": "^3.1.5",
        "fs": "^0.0.1-security",
        "html-minifier": "^4.0.0",
        "marked": "^6.0.0",
        "marked-mangle": "^1.1.7",
        "module-alias": "^2.2.3",
        "pug": "^3.0.2"
    },
    "imports": {
        "#core/*": "./src/core/*",
        "#db": "./src/core/database.js",
        "#struct": "./src/core/bridge.class.js",
        "#modules/*": "./_modules/*"
    },
    "scripts": {
        "start": "node src/main.js --config config.json --release",
        "start-dev": "node src/main.js --config config.json --devel",
        "dev": "node src/main.js --config config.json --devel",
        "rel": "node src/main.js --config config.json --release",
        "init": "node src/main.js --init",
        "test": " node src/test.js",
        "update-theme": "node src/main.js --config config.json --only updateTheme"
    },
    "type": "module"
}
