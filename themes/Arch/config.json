{
    "name": "Arch Advyzon",
    "author": "Hogger team",
    "description": "Icarus style theme for Nexo",
    "lib": [
        "@:rsms:markdown-wasm:jsdelivr",
        "@:highlightjs:&&:jsdelivr"
    ],
    "API": {
        "hasPlugin": true,
        "searchComponent": ["title","date","id","content"],
        "provideWith":"v2",
        "experimentalClassArticle":true
    },
    "rawPosts": {
        "copy": true,
        "copyTo": "posts"
    },
    "enableThemeWebsiteIcon":false,
    "default": {
        "3rd-bar": false,
        "primarySidebarWidgets": ["about","announcement","recent"],
        "secondarySidebarWidgets": [],
        "overrideIndexPage": {},
        "overridePostPage": {
            "primarySidebarWidgets": ["about","toc","recent"]
        }
    },
    "layout": {
        "type": "PUG",
        "post_layout": "post.pug",
        "layouts": [
            {
                "name": "index",
                "build": {
                    "filename": "index.pug",
                    "destname": ""
                }
            },
            {
                "name": "archive",
                "build": {
                    "filename": "archive.pug",
                    "destname": "archive",
                    "cycling": true,
                    "option": {
                        "cycling": {
                            "parent": "sorted_posts.defaultOrder",
                            "every": 5,
                            "name": "PostsThisPage"
                        }
                    }
                }
            },
            {
                "name": "category",
                "build": {
                    "filename": "category.pug",
                    "destname": "category",
                    "cycling": true,
                    "option": {
                        "cycling": {
                            "parent": "provision_site.categories",
                            "every": 5,
                            "name": "value"
                        }
                    }
                }
            },
            {
                "name": "category_every",
                "build": {
                    "filename": "category_every.pug",
                    "destname": "category/s",
                    "varias": true,
                    "cycling": true,
                    "option": {
                        "varias": {
                            "parent": "provision_site.categories"
                        },
                        "cycling": {
                            "parent": "Varias.value",
                            "every": 5,
                            "name": "value"
                        }
                    }
                }
            },
            {
                "name": "status",
                "build": {
                    "filename": "status.pug",
                    "destname": "status",
                    "extras": "{date:new Date()}"
                }
            },
            {
                "name": "about",
                "build": {
                    "filename": "about.pug",
                    "destname": "about",
                    "extras": "{post:excluded_posts['about.md']}"
                }
            }
        ]
    }
}