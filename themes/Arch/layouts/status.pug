include /mixins/script.pug
doctype html
html
    head 
        include /includes/base_script.pug
        include /includes/css_iac.pug
        title= __title__('STATUS',user.name)
    body.mdui-theme-auto(OCP='OVERRIDE')
        .topbar-container
            include /includes/topbar.pug
        #main
            .content
                .card.archive.column
                    .heading| Articles
                    = site.posts.length
                .card.category.column
                .card.update.column
                    .heading| Update
                    .plain| Build time
                    .plain= Nexo.deploy_time
                .card.theme.column
                    .heading| Theme
                    .plain| Nexo with Arch Theme v0.3
                    .flex.alc.fgap
                        .logo-of-theme
                        != Nexo.logo
                .card.plugin.column
                    .heading| Plugin
                    .plain!=JSON.stringify(Plugin)
            +sidebar(Plugin.hasPropertyThenOr(theme,'overrideStatusPage.primarySidebarWidgets',theme.primarySidebarWidgets))
        include /includes/footer.pug