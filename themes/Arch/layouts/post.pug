include /mixins/script.pug
doctype html 
html(lang="zh")
    head 
        include /includes/base_script.pug
        include /includes/post_prelude.pug
        +meta(post.foreword,post.keywords)
        title= __title__(post.title,'read')
    body(OCP='OVERRIDE')
        #url= file(post.pathto)
        .topbar-container 
            include /includes/topbar.pug
        #main(class=theme['3rd-bar']&&'multi')
            .content
                if post.old == true
                    .card
                        #markdown_fillContent
                            != post.getParsed('foreword')
                            != post.getParsed('content')
                else
                    .card.foreword.column
                        .meta= i18n('FOREWORD')
                        != post.getParsed('foreword')
                    .card
                        #markdown_fillContent!= post.getParsed('content')
                .readnext.flex
                    - let __prev = ID[post.prevID] || {}
                    - let __next = ID[post.nextID] || {}
                    a.prev(href=__prev.websitePath&&file(__prev.websitePath))=__prev.title || 'ALREADY EARLIEST'
                    a.next(href=__next.websitePath&&file(__next.websitePath))=__next.title || 'NOT UPDATED'
            +sidebar(Plugin.hasPropertyThenOr(theme,'overridePostPage.primarySidebarWidgets',theme.primarySidebarWidgets))
        include /includes/footer.pug
