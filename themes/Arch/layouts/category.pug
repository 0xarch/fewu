include /mixins/script.pug
include /mixins/type_script.pug
doctype html
html 
    head
        +meta(user.note,user.keyword||'')
        +base()
        include /includes/css_iac.pug
        title= __title__('Categories',user.name)
    body(OCP='OVERRIDE') 
        +header()
        #main
            .content
                .Grid.-NoMob(style="--i:1fr 1fr")
                    each item in cycling.value
                        - let v = item.value
                        +typecard(v.catename,v.included_articles.length,ID[v.included_articles[0]].ECMA262Date)
                +foot_navigator(cycling.total,cycling.now,'category')
            +sidebar(Plugin.hasPropertyThenOr(theme,'overrideTypePage.primarySidebarWidgets',theme.primarySidebarWidgets))
        include /includes/footer.pug
        include /components/searchPanel.pug