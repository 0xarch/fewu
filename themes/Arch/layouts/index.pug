doctype html 
html(lang="zh")
    head 
        include /includes/base_script.pug
        include /includes/css_iac.pug
        title= __title__('index',user.name)
    body(OCP='OVERRIDE')
        nav.topbar-container
            include /includes/topbar.pug
        #main
            .content
                .post-container
                    each item in sortArticle.recently
                        include /components/postcard.pug
                - let c = 0
            if theme['side_position']=='right'
                - c = 1
            div(class='sidebar-'+['l','r'][c])
                include /includes/announcement.pug
                include /components/about.pug
                include /includes/recent.pug
            if theme['3rd_bar']
                div(class='sidebar-'+['r','l'][c])
        include /includes/footer.pug