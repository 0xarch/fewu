include /mixins/script.pug
include /mixins/post_script.pug
doctype html 
html(lang="zh")
    head 
        +prelude(post)
        +meta(post)
        +base()
        title= __title__(post.title,'read')
    body(OCP='OVERRIDE')
        +topbar()
        header(class=(!theme.customEyeImageUrl)&&'nomix',style='background:'+(theme.customEyeImageUrl?'url('+theme.customEyeImageUrl+')':'var(--brand-color-75)'))
            .Heading= post.title
            .meta
                span.p8= post.date.toLocaleDateString(settings.language,{dateStyle:'full'})
                span.p8= post.category
                span.p8= post.wordCount+i18n('Characters')
        #main(class=theme['3rd-bar']&&'multi')
            .content
                .card
                    #markdown_fillContent.container!= post.getParsed('content')
            +sidebar(Plugin.hasPropertyThenOr(theme,'overrideAboutPage.primarySidebarWidgets',theme.primarySidebarWidgets))
        include /includes/footer.pug
        include /components/searchPanel.pug
