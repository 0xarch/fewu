include /mixins/script.pug
include /mixins/post_script.pug
doctype html 
html(lang="zh")
    head 
        +prelude(post)
        +meta(post)
        +base()
        title= __title__(post.title,'read')
    body(OCP='OVERRIDE')
        #url= file(post.pathto)
        +topbar()
        header(class=(!theme.customEyeImageUrl)&&'nomix',style='background:'+(theme.customEyeImageUrl?'url('+theme.customEyeImageUrl+')':'var(--brand-color-75)'))
            .Heading= post.title
            .meta
                span.p8= post.date.toLocaleDateString(settings.language,{dateStyle:'full'})
                span.p8= post.category
                span.p8= post.wordCount+i18n('Characters')
        main#main
            .content
                unless post.old == true
                    .card.foreword
                        .heading= i18n('Foreword')
                        .container!= post.getParsed('foreword')
                .card.p8
                    article#markdown_fillContent
                        if post.old == true
                            != post.getParsed('foreword')
                        != post.getParsed('content')
                if post.license.is_cc_license()
                    .card.cc
                        a.Heading(href='https://creativecommons.org/')
                            = i18n('Distribution License Agreement') + ' '
                            i.fa-brands.fa-creative-commons(aria-hidden='true')
                        .inner
                            - let is = (v)=>post.license.includes(v)
                            if is('BY')
                                .Heading.by BY
                                    i.fa-brands.fa-creative-commons-by
                            if is('NC')
                                .Heading.nc NC
                                    i.fa-brands.fa-creative-commons-nc
                            if is('ND')
                                .Heading.nd ND
                                    i.fa-brands.fa-creative-commons-nd
                            if is('SA')
                                .Heading.sa SA
                                    i.fa-brands.fa-creative-commons-sa
                else
                    .card.cc-priv
                        .Heading= i18n('Distribution License Agreement')
                        .container
                            | The copyright of this article belongs to the original author. When others share it, they are not allowed to create it again and must indicate the original author.
                .foot-navigator.flex.jcc
                    - let earliest = post.prevID?false:true
                    - let latest = post.nextID?false:true
                    - let __prev = ID[post.prevID]
                    - let __next = ID[post.nextID]
                    a.nowrap(href=!earliest&&file(__prev.path('website')),class=earliest?'disabled':'')= earliest?i18n('Already earliest'):__prev.title 
                    a.nowrap(href=!latest&&file(__next.path('website')),,class=latest?'disabled':'')= latest?i18n('Already latest'):__next.title
            +sidebar()
        include /includes/footer.pug
        include /components/searchPanel.pug
