{
    "name": "Wacal Website Theme",
    "author": "0xarch",
    "thanks": "The GNOME VDG",
    "description": "Simple theme for Nexo",
    "lib": [
        "@:highlightjs:&&:unpkg",
        "@:0xarch:Wark/GNOME:jsdelivr"
    ],
    "API": {
        "hasPlugin": true,
        "searchComponent": [
            "title",
            "date",
            "id",
            "content"
        ],
        "provideWith": "v2"
    },
    "copy": {
        "@posts": "posts"
    },
    "enableThemeWebsiteIcon": true,
    "default": {
        "3rd-bar": false,
        "verticalNavbar": false,
        "useDefaultCopyrightText": true,
        "copyrightText": "",
        "headerObjects": [
            ["/","Home"],
            ["/archive/1","Archives"],
            ["/category/1","Categories"],
            ["/tag/1","Tags"],
            ["/about/","About"],
            ["/status/","gnome-feather-tool",true]
        ],
        "primarySidebarWidgets": [
            "about",
            "announcement",
            "recent",
            "search"
        ],
        "secondarySidebarWidgets": [],
        "overridePostPage": {
            "primarySidebarWidgets": [
                "search",
                "about",
                "toc",
                "recent"
            ]
        },
        "overrideAboutPage": {
            "primarySidebarWidgets": [
                "about",
                "contact",
                "recent"
            ]
        }
    },
    "layout": {
        "type": "PUG",
        "post_layout": "post.pug",
        "layouts": [
            {
                "name": "Index page (Home page)",
                "from": "index.pug",
                "to": "/"
            },
            {
                "name": "Post list page",
                "from": "page.pug",
                "to": "page",
                "cycling": true,
                "option": {
                    "cycling": {
                        "parent": "sort.defaultOrder",
                        "every": 10
                    }
                }
            },
            {
                "name": "Archive page",
                "from": "archive.pug",
                "to": "archive",
                "cycling": true,
                "option": {
                    "cycling": {
                        "parent": "sort.defaultOrder",
                        "every": 10
                    }
                }
            },
            {
                "name": "Category Template",
                "from": "category.pug",
                "to": "category",
                "cycling": true,
                "option": {
                    "cycling": {
                        "parent": "site.categories",
                        "every": 48
                    }
                }
            },
            {
                "name": "Category (Each) Template",
                "from": "category_every.pug",
                "to": "category/s${varias.name}",
                "varias": true,
                "cycling": true,
                "option": {
                    "varias": {
                        "parent": "site.categories"
                    },
                    "cycling": {
                        "parent": "varias.value.included",
                        "every": 5
                    }
                }
            },
            {
                "name": "Tag Template",
                "from": "tag.pug",
                "to": "tag",
                "cycling": true,
                "option": {
                    "cycling": {
                        "parent": "site.tags",
                        "every": 48
                    }
                }
            },
            {
                "name": "Tag (Each) Template",
                "from": "tag_every.pug",
                "to": "tag/s${varias.name}",
                "varias": true,
                "cycling": true,
                "option": {
                    "varias": {
                        "parent": "site.tags"
                    },
                    "cycling": {
                        "parent": "varias.value.included",
                        "every": 5
                    }
                }
            },
            {
                "name": "status",
                "from": "status.pug",
                "to": "status"
            },
            {
                "name": "about",
                "from": "about.pug",
                "to": "about",
                "addition": {
                    "post": "excluded_posts.about\\.md"
                }
            }
        ]
    }
}