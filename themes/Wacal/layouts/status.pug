include /mixins/script.pug
doctype html
html
    head 
        +meta(user.note,user.keyword||'')
        +gbase()
        title= __title__(i18n('Status'),user.name)
    body(OCP='OVERRIDE')
        +gnome_header()
        #intro.intro.tac
            h1=i18n('Status')
        main.content#content
            +counter_section()
            .special
                h2= i18n('All categories')
            section
                ul.intros
                    each i in site.used_categories
                        li
                            a.mark(style='--i:var(--'+colors[Math.floor(i.length*2+5)%7]+'3)')
                                b= i
                                small= i18n(site.categories[i].included.length+' in total')
            .special
                h2= i18n('All tags')
            section
                ul.intros
                    each i in site.used_tags
                        li
                            a.mark(style='--i:var(--'+colors[Math.floor(i.length*2+5)%7]+'3)')
                                b= i
                                small= i18n(site.tags[i].included.length+' in total')
            .special
                header
                    h2= i18n('Local information')
                    small= i18n('@STAT_PRO_WARN')
            section
                div 
                    each v,k in CONSTANTS
                        div
                            b=k
                            i=v
        +gnome_footer()
        include /components/searchPanel.pug