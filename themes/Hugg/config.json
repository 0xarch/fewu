{
    "name": "Hugg Theme",
    "author": "Hogger team",
    "description": "Default Theme for Hogger",
    "lib_used":[
        "@github:0xarch/mata-toolkit",
        "@github:markedjs/marked",
        "@github:highlightjs/highlight.js"
    ],
    "layout":{
        "type":"EJS",
        "post_layout":"post.ejs",
        "layouts":[{
            "name": "archive",
            "build": {
                "filename": "archive.ejs",
                "destname": "archive",
                "cycling": true,
                "option":{
                    "cycling":{
                        "parent":"Sorts.byDate",
                        "every":5,
                        "name":"PostsThisPage"
                    }
                }
            }
        },
        {
            "name": "category",
            "build": {
                "filename": "category.ejs",
                "destname": "category",
                "cycling":true,
                "option":{
                    "cycling":{
                        "parent":"Sorts.byCategory",
                        "every":5,
                        "name":"value"
                    }
                }
            }
        },
        {
            "name": "category_every",
            "build": {
                "filename": "category_every.ejs",
                "destname": "category/s",
                "varias": true,
                "cycling": true,
                "option":{
                    "varias":{
                        "parent":"Sorts.byCategory"
                    },
                    "cycling":{
                        "parent":"Varias.value",
                        "every":5,
                        "name":"value"
                    }
                }
            }
        },
        {
            "name": "index",
            "build": {
                "filename": "index.ejs",
                "destname": ""
            }
        },
        {
            "name": "about",
            "build": {
                "filename": "post.ejs",
                "destname": "about",
                "extras": "{post:Specials['about.md']}"
            }
        }
    ]

    },
    "files":{

    }
}