{
    "name": "Next Theme",
    "author": "Hogger team",
    "description": "Next theme for Hogger",
    "lib":[
        "@github:0xarch/mata-toolkit",
        "@github:markedjs/marked",
        "@:rsms:markdown-wasm:jsdelivr",
        "@:highlightjs:&&:jsdelivr"
    ],
    "rawPosts":{
        "copy":true,
        "copyTo":"posts"
    },
    "layout":{
        "type":"EJS",
        "post_layout":"post.ejs",
        "layouts":[{
            "name": "archive",
            "build": {
                "filename": "archive.ejs",
                "destname": "archive",
                "cycling": true,
                "option":{
                    "cycling":{
                        "parent":"Sorts.byDate",
                        "every":5,
                        "name":"PostsThisPage"
                    }
                }
            }
        },
        {
            "name": "category",
            "build": {
                "filename": "category.ejs",
                "destname": "category",
                "cycling":true,
                "option":{
                    "cycling":{
                        "parent":"Sorts.byCategory",
                        "every":5,
                        "name":"value"
                    }
                }
            }
        },
        {
            "name": "category_every",
            "build": {
                "filename": "category_every.ejs",
                "destname": "category/s",
                "varias": true,
                "cycling": true,
                "option":{
                    "varias":{
                        "parent":"Sorts.byCategory"
                    },
                    "cycling":{
                        "parent":"Varias.value",
                        "every":5,
                        "name":"value"
                    }
                }
            }
        },
        {
            "name": "index",
            "build": {
                "filename": "index.ejs",
                "destname": ""
            }
        },
        {
            "name": "about",
            "build": {
                "filename": "post.ejs",
                "destname": "about",
                "extras": "{post:Specials['about.md']}"
            }
        },
        {
            "name": "status",
            "build": {
                "filename": "status.ejs",
                "destname": "status",
                "extras": "{date:new Date()}"
            }
        }
    ]

    },
    "files":{

    },
    "RJS":{
        "removeLineBreak":false,
        "skipWhitespace":false,
        "replaceVariables":true,
        "elementReplace":{
            "Divider":"hr"
        },
        "classPrefix":"ME-",
        "noPrefixHTML":true
    }
}