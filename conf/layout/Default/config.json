{
    "name": "Brandarial Layout",
    "author": "oxArch",
    "description": "A brand new layout based on Mata Toolkit. Requires Brandarial Theme",
    "pages": [{
            "name": "archive",
            "build": {
                "filename": "archive.ejs",
                "destname": "archive",
                "cycling": true,
                "option":{
                    "parent":"Sorts.Sorted",
                    "every":5,
                    "name":"PostsThisPage"
                }
            }
        },
        {
            "name": "category",
            "build": {
                "filename": "category.ejs",
                "destname": "category"
            }
        },
        {
            "name": "category_every",
            "build": {
                "filename": "category_every.ejs",
                "destname": "category",
                "varias": true,
                "option":{
                    "parent":"Sorts.byCategory"
                }
            }
        },
        {
            "name": "index",
            "build": {
                "filename": "index.ejs",
                "destname": ""
            }
        },
        {
            "name": "about",
            "build": {
                "filename": "post.ejs",
                "destname": "about",
                "extras": "{post:Specials['about.md']}"
            }
        }
    ],
    "blog_page": {
        "filename": "post.ejs"
    }
}